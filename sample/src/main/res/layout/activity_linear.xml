    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRvContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <include layout="@layout/layout_control" />


</LinearLayout>